CREATE TABLE product(
id integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY, name varchar(50), category varchar(50), price integer, img varchar(500));

CREATE TABLE size_options (
  id integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
  size_option_name varchar(10) NOT NULL, UNIQUE(size_option_name));

CREATE TABLE product_sizes (
    product_id INT,
    size_id INT,
    PRIMARY KEY (product_id, size_id),
    FOREIGN KEY (product_id) REFERENCES product (id),
    FOREIGN KEY (size_id) REFERENCES size_options (id));


SELECT
  product.name, size_options.size_option_name
FROM
  product
JOIN
  product_sizes
ON
  product.id = product_sizes.product_id
JOIN
  size_options
ON
  size_options.id = product_sizes.size_id;